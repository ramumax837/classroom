<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="safiya">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="classroom"/>
            </not>
        </preConditions>

        <createTable tableName="classroom">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="teacher" type="VARCHAR(100)"/>
        </createTable>

        <addUniqueConstraint
                tableName="classroom"
                columnNames="name"
                constraintName="uc_classroom_name"/>

        <createIndex tableName="classroom" indexName="idx_teacher">
            <column name="teacher"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
